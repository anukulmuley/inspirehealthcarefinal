<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".patientDetailsP">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textHealthidP"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="Health Id"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/editHealthIdP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:textSize="18sp">

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textNameP"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="Name"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/editNameP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:padding="20dp"
                >

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textAgeP"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="Age"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/editAgeP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:padding="20dp"
                >

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textSexP"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="Sex"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/editSexP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:padding="20dp"
                >

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textDoBP"
                android:layout_width="150dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="Birth Date"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/editDoBP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="24sp"
                android:padding="20dp"
                >

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:weightSum="1">

            <TextView
                android:id="@+id/textDateP"
                android:layout_width="200dp"
                android:layout_height="match_parent"
                android:gravity="center|start"
                android:padding="20dp"
                android:text="Admission Date"
                android:textSize="18sp">

            </TextView>

            <TextView
                android:id="@+id/editDateP"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:textSize="18sp"
                android:padding="20dp"
                >

            </TextView>

        </LinearLayout>


    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </androidx.cardview.widget.CardView>






</LinearLayout>